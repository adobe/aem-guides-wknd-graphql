query ($adventurePath: String!) {
  adventureByPath(_path: $adventurePath) {
    item {
      _path
      adventureTitle
      adventureActivity
      adventureType
      adventurePrice
      adventureTripLength
      adventureGroupSize
      adventureDifficulty
      adventurePrice
      adventurePrimaryImage {
        ... on ImageRef {
          _dynamicUrl
        }
      }
      adventureDescription {
        html
      }
      adventureItinerary {
        html
      }
    }
  }
}